@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

*, *::before, *::after {
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
   

}
body{
    margin: 0;
}
.search_bar{
	width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin-top: 30px;
}
form{
	width: 90%;
}
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;    
}
.result_area{
	width: 100%;
}
.search-result{
	width: 95%;
    margin: 10px auto;
    background-color: rgb(235, 240, 237);    
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    display: flex;
    justify-content: space-between;
    padding: 0px 20px;
}
.search-result p{
	margin-left: 10%;
}
.search-result h4{
	margin-left: 20px;
}
h3{
	margin-left: 20px;
}
.reserve_button{
	float: right;
	margin-top: 30px;
	font-size: 12px;
  	cursor: pointer;
 	padding: 5px 10px;
  	text-align: center;
  	text-decoration: none;
  	background-color: transparent; 
  	border: 2px solid #1b48de;
  	font-size: 14px;
 	color:  #1b48de;
}
.reserve_button:hover{
	background-color: #1b48de;
	color: rgb(235, 240, 237);
}
.error-message{
	color: red;
}
.Search-textbox{
	width: 50%;
}