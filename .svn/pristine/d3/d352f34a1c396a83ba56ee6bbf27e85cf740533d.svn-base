package com.libnet;

import java.io.IOException;

import javax.servlet.DispatcherType;
import javax.servlet.Filter;
import javax.servlet.FilterChain;
import javax.servlet.FilterConfig;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;
import javax.servlet.annotation.WebFilter;
import javax.servlet.http.HttpServletRequest;

import ca.senecacollege.prg556.limara.dao.MaterialDAO;

import com.libnet.data.AccountOwnerDAOFactory;
import com.libnet.data.MaterialDAOFactory;
import com.libnet.data.MaterialReservationDAOFactory;

/**
 * Servlet Filter implementation class LimaraMenuFilter
 */
@WebFilter(dispatcherTypes = {DispatcherType.REQUEST }
, urlPatterns = { "/limaramenu.jspx" })
public class LimaraMenuFilter implements Filter {

	/**
	 * Default constructor. 
	 */
	public LimaraMenuFilter() {
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see Filter#destroy()
	 */
	public void destroy() {
		// TODO Auto-generated method stub
	}

	/**
	 * @see Filter#doFilter(ServletRequest, ServletResponse, FilterChain)
	 */
	public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain) throws IOException, ServletException {
		// TODO Auto-generated method stub
		// place your code here
		HttpServletRequest req = (HttpServletRequest)request;
		try{
			req.setAttribute("accountOwner", AccountOwnerDAOFactory.getAccountOwnerDAO().getAccountOwner(123));
			req.setAttribute("numberOfReservations", MaterialReservationDAOFactory.getMaterialReservationDAO().getMaterialReservations(123).size());
		}
		catch(Exception e){
			throw new ServletException();
		}
		// pass the request along the filter chain
		chain.doFilter(request, response);
	}

	/**
	 * @see Filter#init(FilterConfig)
	 */
	public void init(FilterConfig fConfig) throws ServletException {
		// TODO Auto-generated method stub
	}

}
