import ca.senecacollege.prg556.limara.bean.Material;
import ca.senecacollege.prg556.limara.dao.MaterialDAO;

class MaterialData implements MaterialDAO {
	

	public MaterialData() {
		// TODO Auto-generated constructor stub
	}
	
	@Override
	public  Material getMaterial(String arg0) throws SQLException {
		// TODO Auto-generated method stub
		if(arg0.equals("3487") ){
			 return  new Material(arg0, "The Lying Life of Adults", "Book");
			 
			
		}
		
		else if(arg0.equals("3488") ){
			 return new  Material(arg0, "Where the Forest Meets the Stars", "Audio");
		}
		
		else if(arg0.equals("3489") ){
			 return new  Material(arg0, "Harry Porter",  "Video");
		}
		
		else {
			return null;
		}
		
	}
	
	

	@Override
	public List<Material> getAvailableMaterials(String title, String type)
			throws SQLException {
		// TODO Auto-generated method stub
		List<Material> newList = new ArrayList<Material>();
		newList.add(getMaterial("3487"));
		newList.add(getMaterial("3488"));
		newList.add(getMaterial("3489"));
		
		return newList;
	}

}
