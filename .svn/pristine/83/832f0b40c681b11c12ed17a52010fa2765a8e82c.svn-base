@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
* {
  box-sizing: border-box;
}

body {
	background-color:rgb(4,4,5);
	margin:0;
	color: white;
	font-family: 'Poppins', sans-serif;
}

.container {
	display:flex;
	justify-content: space-between;
	height: 100vh;
	
}

.image{
	flex: 1;
	width: fit-content;
    height: fit-content;
}

.image__login{
	width: 100%;
    height: 100vh;
    image-rendering: crisp-edges;
   
		
}

.authentication {
	flex: 1;
	display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center
	
}

.username {
	margin: 10px;
    padding: 5px;
}

.password {
	margin: 10px;
    padding: 5px;
}

label {
	margin-right: 10px;
}

h2 {
	margin-bottom: 2px;
}

.input{
	padding: 2px;
    height: 25px;
    width: 210px;
    border: none;
    border-radius: 5px;
}

.login {
	margin: 10px
	padding:5px;
}

.login__button {
	width: 100%;
	height: 30px;
    border-radius: 5px;
    background-color: rgb(0, 0, 230);
    color: white;
    font-family: inherit;
    font-weight: 800;
    border: none;
    
}

.login__button:hover {
	background-color: rgb(0, 0, 204);
	cursor: pointer;
}

.fail-message {
	margin-top: 0px;
}

p {
	color: red;
}

@media all and (max-width: 760px) {
	.container {
		display:flex;
		flex-direction: column;
		justify-content: space-between;
		
	}
	
	.image__login{
		height: 400px; 
		image-rendering: pixelated;
	
	}
	
	
	
}

